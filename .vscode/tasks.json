{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate Projects",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset ${env:os}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Projects",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "--preset ${env:os}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Generate Projects"
            ]
        }
    ]
}